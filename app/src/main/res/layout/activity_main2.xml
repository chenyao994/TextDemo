<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yangli.sdk.demo.textdemo.Main2Activity">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/text_viewssss"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="按时到路口附近拉升的减肥了加速度来减肥；
            拉升的；发了氨基酸的；附近；阿里山的会计法拉升的会计法卡死的龙
            卷风啊；上来看发；了激发；是懒得看发；了深刻激发了
            ；可视对讲发了；爱神的箭

            发；拉升的激发了；按时打卡就；了三大框
            架房；拉撒大家发了；按时打卡就发生；领导看
            见发；拉屎激发；as激发；两三点就；案例三姐夫啥的；了空间发来
            撒大姐夫另外；二姐夫了；三大框架发；拉升的会计法as；两地分居案
            例；打飞机了； 卡死机打发了；开始的风景；拉手都快放假了咖啡
            就爱说多了； 发送；两地分居"/>
             <com.yangli.sdk.demo.textdemo.rich.RichEditText
                 android:id="@+id/emoji_edit_text"
                 android:layout_width="match_parent"
                 android:layout_height="120dp"
                 android:layout_margin="10dp"
                 android:background="@null"
                 android:gravity="left"
                 android:hint="请输入贴子内容"
                 android:maxLines="7"
                 app:richMaxLength="2000" />

             <ImageView
                 android:id="@+id/emoji_show_bottom"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_alignParentRight="true"
                 android:layout_below="@+id/emoji_edit_text"
                 android:layout_margin="10dp"
                 android:src="@drawable/publish_face_n3x" />

             <LinearLayout
                 android:id="@+id/button_layout"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/emoji_edit_text"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/emoji_show_at"
                     android:layout_width="30dp"
                     android:layout_height="match_parent"
                     android:layout_margin="10dp"
                     android:src="@drawable/publish_at_d3x" />

                 <TextView
                     android:id="@+id/emoji_show_topic"
                     android:layout_width="30dp"
                     android:layout_height="match_parent"
                     android:layout_margin="10dp"
                     android:gravity="center"
                     android:text=" # "
                     android:textColor="#FFFFFF"
                     android:textSize="30sp" />

             </LinearLayout>

             <Button
                 android:id="@+id/insert_text_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:layout_below="@+id/button_layout"
                 android:layout_margin="10dp"
                 android:text="插入文本" />
        <com.yangli.sdk.demo.textdemo.rich.RichTextView
            android:layout_width="match_parent"
            android:id="@+id/richtext_view"

            android:layout_height="wrap_content"
            />
             <com.yangli.sdk.demo.textdemo.rich.EmojiLayout
                 android:id="@+id/emojiLayout"
                 android:layout_width="match_parent"
                 android:layout_height="250dp"
                 android:layout_alignParentBottom="true"
                 android:visibility="gone"
                 app:richIndicatorFocus="@drawable/page_indicator_focused"
                 app:richIndicatorUnFocus="@drawable/page_indicator_unfocused"
                 app:richMarginBottom="8dp"
                 app:richMarginTop="15dp"></com.yangli.sdk.demo.textdemo.rich.EmojiLayout>
         </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
